<h3>Discover Movies</h3>

<%= button_to "Find Top Rated Movies", "/users/#{@user.id}/movies", method: :get, params: { top_rated: true } %>

<section id ="search_form">
  <%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
    <%= f.label :search %>
    <%= f.text_field :search, value: params[:search] %>
    <%= f.submit "Find Movies" %>
  <% end %>
</section>